<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/botaoVoltarPagina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="350dp"
        android:paddingTop="50px"
        android:src="@drawable/backpage"
        android:background="#3F51B5"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:layout_marginTop="100px"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="90px"
        android:fontFamily="@font/freshman"
        android:text="Bem vindo a tela de Registro"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="37dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="456dp"
        android:layout_gravity="center"
        android:layout_marginTop="400px"
        android:layout_marginBottom="300px"
        android:backgroundTint="#F0F0F1"
        android:elevation="8dp"
        app:cardCornerRadius="40px">


        <LinearLayout
            android:layout_width="359dp"
            android:layout_height="359dp"
            android:layout_gravity="center"
            android:layout_marginBottom="250px"
            android:gravity="center"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:layout_marginRight="150px"
                android:layout_marginBottom="100px"
                android:hint="Nome"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <EditText
                    android:id="@+id/nametextedit"
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/custom_person1"
                    android:drawablePadding="20px"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#575656"
                    android:textColorHighlight="@color/orange"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:layout_marginRight="150px"
                android:layout_marginBottom="70px"
                android:hint="E-mail"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <EditText
                    android:id="@+id/emailtextedit"
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/custom_email1"
                    android:drawablePadding="20px"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#575656"
                    android:textColorHighlight="@color/orange"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150px"
                android:layout_marginTop="40px"
                android:layout_marginRight="150px"
                android:hint="Senha"
                android:textColorHint="@color/black"
                app:boxStrokeColor="@color/orange"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <EditText
                    android:id="@+id/senhatextedit"
                    android:layout_width="match_parent"
                    android:layout_height="180px"
                    android:drawableStart="@drawable/custom_lock1"
                    android:drawablePadding="20px"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingStart="20dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="20dp"
                    android:textColor="#575656"
                    android:textColorHighlight="@color/orange"
                    android:textColorHint="@color/black" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/bt_registrar"
            android:layout_width="match_parent"
            android:layout_height="78dp"
            android:layout_gravity="center"
            android:layout_marginTop="400px"
            android:backgroundTint="@color/white"
            android:shadowColor="@color/black"
            android:text="Registrar"
            android:textColor="@color/orange"
            android:textSize="18dp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>