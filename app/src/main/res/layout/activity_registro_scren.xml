<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registroScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:orientation="vertical"
    tools:context=".Activities.RegistroScreen">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:elevation="1dp"
            app:title=" ">

            <ImageButton
                android:id="@+id/backToMainActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="12dp"
                android:background="#3F51B5"
                android:src="@drawable/backpage" />
        </com.google.android.material.appbar.MaterialToolbar>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/regUserPhoto"
                android:layout_width="308dp"
                android:layout_height="168dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/logo" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:fontFamily="@font/freshman"
            android:text="Bem vindo a tela de Registro"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="37dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="367dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:backgroundTint="@color/white">


                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150px"
                            android:layout_marginTop="20dp"
                            android:layout_marginRight="150px"
                            android:hint="Nome"
                            android:textColorHint="@color/black"
                            android:weightSum="3"
                            app:boxStrokeColor="@color/orange"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <EditText
                                android:id="@+id/nametextedit"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:layout_gravity="center"
                                android:drawableStart="@drawable/custom_person1"
                                android:drawablePadding="20px"
                                android:paddingStart="20dp"
                                android:paddingTop="20dp"
                                android:paddingEnd="20dp"
                                android:textColor="#575656"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150px"
                            android:layout_marginTop="110dp"
                            android:layout_marginRight="150px"
                            android:hint="E-mail"
                            android:textColorHint="@color/black"
                            android:weightSum="1"
                            app:boxStrokeColor="@color/orange"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <EditText
                                android:id="@+id/emailtextedit"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:layout_gravity="center"
                                android:drawableStart="@drawable/custom_email1"
                                android:drawablePadding="20px"
                                android:paddingStart="20dp"
                                android:paddingTop="20dp"
                                android:paddingEnd="20dp"
                                android:textColor="#575656"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="150px"
                            android:layout_marginTop="200dp"
                            android:layout_marginRight="150px"
                            android:hint="Senha"
                            android:textColorHint="@color/black"
                            app:boxStrokeColor="@color/orange"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <EditText
                                android:id="@+id/senhatextedit"
                                android:layout_width="match_parent"
                                android:layout_height="63dp"
                                android:drawableStart="@drawable/custom_lock1"
                                android:drawablePadding="20px"
                                android:inputType="textPassword"
                                android:maxLines="1"
                                android:paddingStart="20dp"
                                android:paddingTop="20dp"
                                android:paddingEnd="20dp"
                                android:textColor="#575656"
                                android:textColorHighlight="@color/orange"
                                android:textColorHint="@color/black" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="60dp"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/bt_registrar"
                            android:layout_width="match_parent"
                            android:layout_height="78dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginRight="40dp"
                            android:backgroundTint="#3F51B5"
                            android:text="Registrar"
                            android:textColor="@color/white"
                            android:textSize="18dp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>